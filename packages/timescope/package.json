{
  "name": "timescope",
  "private": true,
  "type": "module",
  "description": "Timescope - Canvas for Time-Series Visualization",
  "scripts": {
    "dev": "vite",
    "test": "tsc --noEmit && vitest run",
    "build": "tsdown",
    "watch": "tsdown -w",
    "lint": "eslint ./src",
    "format": "prettier --check .",
    "type:check": "tsc --noEmit"
  },
  "types": "./src/index.ts",
  "main": "./src/index.ts",
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "default": "./src/index.ts"
    }
  },
  "imports": {
    "#src/*": "./src/*.ts"
  },
  "devDependencies": {
    "@eslint/compat": "^2.0.0",
    "@eslint/js": "^9.39.2",
    "@kikuchan/decimal": "0.1.0-alpha.5",
    "@mdi/svg": "^7.4.47",
    "@napi-rs/canvas": "^0.1.88",
    "@rollup/plugin-node-resolve": "^16.0.3",
    "@types/node": "^25.0.3",
    "@vitejs/plugin-vue": "^6.0.3",
    "@vitest/web-worker": "^4.0.16",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "jsdom": "^27.4.0",
    "prettier": "^3.7.4",
    "prettier-plugin-organize-imports": "^4.3.0",
    "rolldown-plugin-inline-worker": "0.0.1-alpha.1",
    "tsdown": "^0.18.4",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.51.0",
    "vite": "^7.3.0",
    "vitest": "^4.0.16"
  },
  "peerDependencies": {
    "@kikuchan/decimal": "0.1.0-alpha.5"
  }
}
